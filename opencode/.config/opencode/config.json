{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": false,
    "theme": "tokyonight",
    "small_model": "qwen/qwen-2.5-coder-32b-instruct:free",
    "provider": {
        "openrouter": {
            "name": "OpenRouter",
            "models": {
            }
        },
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true
        },
        "brave": {
            "type": "local",
            "command": ["npx", "@brave/brave-search-mcp-server", "--transport", "stdio"],
            "enabled": true
        },
    },
    "agent": {
        "plan": {
            "permission": {
                "context7*": "allow",
                "brave_web_search": "allow"
            }
        },
        "build": {
            "permission": {
                "context7*": "allow",
            }
        }
    },
    "permission": {
        "bash": "ask",
        "context7*": "deny",
        "brave*": "deny",
        "websearch": "deny",
        "codesearch": "deny",
        "external_directory": "ask"
    }
}
